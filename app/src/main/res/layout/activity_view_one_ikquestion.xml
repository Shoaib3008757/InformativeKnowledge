<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_one_ikquestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="informativetelecom.informativeknowledge.ViewOneIKQuestion"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who is the first Governor General of Pakistan?"
            android:textSize="25dp"
            android:textColor="#154360"
            android:id="@+id/question"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohammed Ali Jinnah"
            android:textColor="#4D5656"
            android:textSize="22dp"
            android:id="@+id/answer"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</RelativeLayout>
